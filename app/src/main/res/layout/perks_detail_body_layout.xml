<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_48"
    android:layout_marginStart="@dimen/dp_16"
    android:layout_marginEnd="@dimen/dp_16"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/body_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="?attr/colorLayer2"
        android:scaleType="centerInside"
        tools:ignore="ContentDescription"
        android:layout_marginBottom="@dimen/dp_14"
        tools:src="@drawable/placeholder" />

    <TextView
        android:id="@+id/body_image_caption"
        style="@style/Label.012"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_48"
        tools:text="Lorem ipsum dolor sit amet, consectetur  adipiscing elit." />

    <TextView
        android:id="@+id/body_title"
        style="@style/Header.024"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/body_text_block"
        app:layout_constraintTop_toBottomOf="@id/body_image_caption"
        tools:text="Section Title" />

    <TextView
        android:id="@+id/body_text_block"
        style="@style/Body.014"
        android:textColor="?attr/colorTextBody014LightAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:lineSpacingExtra="1sp"
        app:layout_constraintBottom_toTopOf="@id/body_pullquote"
        app:layout_constraintTop_toBottomOf="@id/body_title"
        app:layout_goneMarginBottom="@dimen/dp_55"
        tools:text="Founded by the Gee women (mother-daughters Miriam, Natalie, Celene and Stephanie Gee) in 2005, Gee Beauty is a multi-generational beauty brand." />

    <TextView
        android:id="@+id/body_pullquote"
        style="@style/Header.024"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_48"
        android:lineSpacingExtra="1sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/body_text_block"
        tools:text="“Etiam rhoncus sapien vitae lorem egestas, in pulvinar diam tempor.”" />

</LinearLayout>