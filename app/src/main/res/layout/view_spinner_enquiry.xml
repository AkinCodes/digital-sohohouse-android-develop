<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/header"
        style="@style/Body.014"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_6"
        android:gravity="center_vertical"
        android:minHeight="@dimen/large"
        android:text="@string/enquiry_your_message_label" />

    <com.sohohouse.seven.common.views.EnquirySpinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_16"
        android:popupBackground="?attr/colorLayer2"
        android:backgroundTint="?attr/colorDrawablePrimary"
        tools:listitem="@layout/item_inquiry_type_spinner" />

</LinearLayout>