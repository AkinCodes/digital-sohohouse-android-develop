<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/SelectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:paddingStart="@dimen/dp_16"
    android:paddingEnd="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_8">

    <com.sohohouse.seven.common.views.AsyncImageView
        android:id="@+id/image"
        android:layout_width="@dimen/list_item_image_size"
        android:layout_height="@dimen/list_item_image_size"
        android:background="?attr/colorLayer2"
        android:contentDescription="@string/alt_content_image_label"
        android:scaleType="centerCrop"
        android:transitionName="@string/alt_content_image_label"
        tools:src="@drawable/placeholder" />

    <TextView
        android:id="@+id/title"
        style="@style/Body.014.Narrow.Accent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/list_item_date_margin_start"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="3"
        tools:text="Artist Laurie Nouchka on her design muse, Soho Beach House" />

</LinearLayout>