<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_48"
        android:background="@color/black_russian"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/perks_btn"
            style="@style/TextLink.02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/large"
            android:layout_marginEnd="@dimen/small"
            android:paddingStart="@dimen/components_button_padding_xsmall"
            android:paddingTop="@dimen/home_footer_margin"
            android:paddingEnd="@dimen/components_button_padding_xsmall"
            android:paddingBottom="@dimen/home_footer_margin"
            android:singleLine="false"
            android:contentDescription="@string/nav_perks_label"
            android:textColor="@color/white"
            tools:text="PERKS" />

        <Button
            android:id="@+id/browse_houses_btn"
            style="@style/TextLink.02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small"
            android:layout_marginEnd="@dimen/large"
            android:paddingStart="@dimen/components_button_padding_xsmall"
            android:paddingTop="@dimen/home_footer_margin"
            android:paddingEnd="@dimen/components_button_padding_xsmall"
            android:paddingBottom="@dimen/home_footer_margin"
            android:singleLine="false"
            android:contentDescription="@string/home_browse_houses_cta"
            android:textColor="@color/white"
            tools:text="BROWSE OUR HOUSES" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>