<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/happening_now_section_label"
        style="@style/heading_03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        tools:text="Happening Now" />

    <TextView
        android:id="@+id/happening_now_section_caption"
        style="@style/Body.012.LightAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_16"
        tools:text="Things happening in your preferred houses" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/happening_now_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginBottom="@dimen/dp_48"
        android:clipToPadding="false"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_8" />

</LinearLayout>