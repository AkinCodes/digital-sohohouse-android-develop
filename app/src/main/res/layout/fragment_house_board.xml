<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorLayer0"
    android:orientation="vertical">

    <com.sohohouse.seven.common.views.HouseBoardRecyclerView
        android:id="@+id/house_board_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="120dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <com.sohohouse.seven.common.views.LoadingView
        android:id="@+id/house_board_loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorLayer0" />

</FrameLayout>