<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_rect_radius4"
    android:backgroundTint="?attr/colorLayer1"
    android:layout_marginHorizontal="@dimen/dp_16"
    android:layout_marginVertical="@dimen/dp_24"
    android:foreground="?selectableItemBackground"
    android:paddingHorizontal="@dimen/dp_16"
    android:paddingVertical="@dimen/dp_14">

    <TextView
        android:id="@+id/title"
        style="@style/Body.014"
        android:textColor="?attr/colorTextBody012Light"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/infoIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="@dimen/dp_8"
        tools:text="50% off your open tab" />

    <TextView
        android:id="@+id/subtitle"
        style="@style/Body.014"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_8"
        app:layout_constraintEnd_toStartOf="@id/infoIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        tools:text="As an Under 27 member, you're entitled to 50% off your open tab." />

    <ImageView
        android:id="@+id/infoIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_info"
        app:tint="?attr/colorDrawablePrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>