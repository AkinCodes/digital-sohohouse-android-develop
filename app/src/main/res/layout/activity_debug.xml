<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/large"
    tools:ignore="HardcodedText">

    <Button
        android:id="@+id/debug_terms_onboarding"
        style="@style/Button.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="terms data onboarding" />

    <Button
        android:id="@+id/debug_terms_induction"
        style="@style/Button.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large"
        android:text="terms data induction" />

    <Button
        android:id="@+id/debug_switch_endpoints"
        style="@style/Button.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large"
        tools:text="Change End points" />

    <Button
        android:id="@+id/debug_force_crash"
        style="@style/Button.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large"
        android:paddingBottom="@dimen/medium"
        android:text="Crash App" />

    <Button
        android:id="@+id/welcome_screen"
        style="@style/Button.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/large"
        android:paddingBottom="@dimen/medium"
        android:text="Open Onboarding Welcome" />

</LinearLayout>