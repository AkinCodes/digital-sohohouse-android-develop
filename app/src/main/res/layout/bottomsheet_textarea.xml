<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:ignore="KeyboardInaccessibleWidget">

    <include
        android:id="@+id/header"
        layout="@layout/edit_profile_modal_header" />

    <EditText
        android:id="@+id/freetext_bottomsheet_input"
        style="@style/Header.018"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginEnd="@dimen/dp_32"
        android:background="@color/transparent"
        android:gravity="top|start"
        android:importantForAutofill="no"
        android:scrollHorizontally="false"
        app:layout_constraintBottom_toTopOf="@id/freetext_bottomsheet_chars_remaining"
        app:layout_constraintTop_toBottomOf="@id/header"
        tools:ignore="LabelFor,TextFields"
        tools:targetApi="o"
        tools:text="I explain stories through images" />

    <TextView
        android:id="@+id/freetext_bottomsheet_chars_remaining"
        style="@style/Label.010"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_32"
        android:layout_marginBottom="@dimen/dp_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/freetext_bottomsheet_input"
        tools:ignore="SmallSp"
        tools:text="156 characters remaining" />

</androidx.constraintlayout.widget.ConstraintLayout>