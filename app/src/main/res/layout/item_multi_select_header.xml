<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_24"
    android:paddingBottom="@dimen/dp_12">

    <TextView
        android:id="@+id/header"
        style="@style/Header.024"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="By City" />

    <TextView
        android:id="@+id/subtext"
        style="@style/Body.012.LightAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header"
        tools:text="Show the benefits more suited to your location" />

    <TextView
        android:id="@+id/reset_btn"
        style="@style/Body.012"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackgroundBorderless"
        android:text="@string/cta_reset"
        android:paddingVertical="@dimen/dp_16"
        android:paddingStart="@dimen/dp_16"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/header"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="RtlSymmetry" />

</androidx.constraintlayout.widget.ConstraintLayout>