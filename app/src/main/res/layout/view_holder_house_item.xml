<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/house_item_width"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_8">

    <com.sohohouse.seven.common.views.AsyncImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/house_item_width"
        android:background="?attr/colorLayer2"
        android:scaleType="centerInside"
        tools:alpha="0.45"
        tools:background="@color/black"
        tools:src="@drawable/placeholder" />

    <TextView
        android:id="@+id/title"
        style="@style/Body.014"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        tools:text="Kettnerâ€™s" />

    <TextView
        android:id="@+id/subtitle"
        style="@style/Body.012.LightAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        tools:text="Soho, Central London" />

</LinearLayout>
