<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="32dp"
    android:layout_marginStart="32dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="85dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/full_screen_prompt_header"
            style="@style/Header.030"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="26dp"
            android:includeFontPadding="false"
            android:textAlignment="center"
            app:drawableTint="?attr/colorDrawablePrimary"
            app:drawableTopCompat="@drawable/ic_soho_house"
            tools:text="@string/overdue_header" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            android:background="?attr/colorDrawablePrimary" />

        <TextView
            android:id="@+id/full_screen_prompt_supporting"
            style="@style/Body.016"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            tools:text="@string/overdue_supporting" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/full_screen_prompt_button"
            style="@style/Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/overdue_cta" />

        <TextView
            android:id="@+id/full_screen_prompt_secondary_button"
            style="@style/TextLink.01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="invisible"
            tools:text="@string/overdue_later_cta" />
    </LinearLayout>
</RelativeLayout>