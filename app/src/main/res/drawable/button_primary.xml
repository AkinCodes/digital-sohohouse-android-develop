<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <item android:state_enabled="false">
        <ripple android:color="?android:colorControlHighlight">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="?attr/colorButtonPrimaryRipple" />
                    <corners android:radius="8000dp" />
                </shape>
            </item>

            <item>
                <shape android:shape="rectangle">
                    <solid android:color="?attr/colorButtonPrimaryDisabled" tools:color="@color/white" />
                    <corners android:radius="8000dp" />
                </shape>
            </item>
        </ripple>
    </item>

    <item>
        <ripple android:color="?android:colorControlHighlight">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="?attr/colorButtonPrimaryRipple" />
                    <corners android:radius="8000dp" />
                </shape>
            </item>

            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/button_primary" tools:color="@color/white" />
                    <corners android:radius="8000dp" />
                </shape>
            </item>
        </ripple>
    </item>

</selector>